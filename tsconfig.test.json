{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "components/**/*.tsx",
    "lib/**/*.ts"
  ]
}
